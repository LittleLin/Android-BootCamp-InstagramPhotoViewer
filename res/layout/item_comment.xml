<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp" >

    <com.yahoo.apps.instagramphotoviewer.widgets.CircularImageView
        android:id="@+id/imgCommentUserProfile"
        android:layout_width="30dp"
        android:layout_height="30dp"        
        android:layout_marginTop="5dp"
        app:border="true"
        app:border_color="#EEEEEE"
        app:border_width="4dp"
        app:shadow="true" />
            />

    <TextView
        android:id="@+id/tvCommentUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"        
        android:layout_marginLeft="5dp"
        android:layout_marginTop="5dp"
        android:layout_toRightOf="@+id/imgCommentUserProfile"
        android:text="@string/username_default_caption"
        android:textColor="@color/username"
        android:textSize="12sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvCommentTimestamp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/tvCommentUsername"
        android:layout_marginLeft="3dp"
        android:layout_toRightOf="@+id/tvCommentUsername"
        android:text="@string/empty_text"
        android:textSize="10sp" />

    <TextView
            android:id="@+id/tvCommentMessage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tvCommentUsername"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/imgCommentUserProfile"
            android:text="@string/caption_default_text"
            android:textColor="#141823"
            android:textSize="10sp" />
</RelativeLayout>